{
  "name": "mt-components",
  "description": "Angular 2 components library",
  "version": "1.0.8",
  "scripts": {
    "build": "ngc && npm run webpack",
    "clean": "rimraf bundles coverage src/**/*.d.ts src/**/*.metadata.json src/**/*.js tests/**/*.d.ts tests/**/*.metadata.json tests/**/*.js index.d.ts index.metadata.json index.js",
    "commit": "npm run prepublish && npm test && git-cz",
    "docs": "npm run typedoc -- --options typedoc.json --exclude '**/*.spec.ts' ./src/",
    "release": "npm run build && npm run release:patch",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "test": "karma start",
    "test-watch": "karma start --singleRun=false --autoWatch=true",
    "typedoc": "typedoc",
    "webpack": "webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jesussobrino/ng2-library"
  },
  "keywords": [
    "angular",
    "angular 2",
    "components",
    "library"
  ],
  "author": "JesÃºs Sobrino",
  "license": "MIT",
  "main": "bundles/core.umd.js",
  "module": "index.js",
  "typings": "index.d.ts",
  "homepage": "https://github.com/jesussobrino/ng2-library",
  "peerDependencies": {
    "@angular/core": ">=2.0.0 || >=4.0.0-beta.0"
  },
  "devDependencies": {
    "@angular/common": "2.4.7",
    "@angular/compiler": "2.4.7",
    "@angular/compiler-cli": "2.4.7",
    "@angular/core": "2.4.7",
    "@angular/platform-browser": "2.4.7",
    "@angular/platform-browser-dynamic": "2.4.7",
    "@angular/platform-server": "2.4.7",
    "@angular/router": "3.4.7",
    "@types/hammerjs": "2.0.34",
    "@types/jasmine": "2.5.41",
    "@types/node": "7.0.5",
    "angular2-template-loader": "^0.6.0",
    "autoprefixer": "^6.7.7",
    "awesome-typescript-loader": "^3.1.1",
    "clean-webpack-plugin": "0.1.15",
    "codelyzer": "2.0.0",
    "commitizen": "2.9.5",
    "core-js": "2.4.1",
    "css-loader": "^0.26.0",
    "cz-conventional-changelog": "1.2.0",
    "istanbul-instrumenter-loader": "0.2.0",
    "jasmine-core": "2.5.2",
    "karma": "1.4.1",
    "karma-chrome-launcher": "2.0.0",
    "karma-coverage": "1.1.1",
    "karma-jasmine": "1.1.0",
    "karma-mocha-reporter": "2.2.2",
    "karma-remap-coverage": "0.1.2",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "2.0.2",
    "loader-utils": "0.2.16",
    "node-sass": "^4.5.0",
    "raw-loader": "^0.5.1",
    "reflect-metadata": "0.1.9",
    "rimraf": "2.5.4",
    "rxjs": "5.1.1",
    "sass-loader": "^6.0.3",
    "source-map-loader": "0.1.6",
    "ts-helpers": "1.1.2",
    "tslint": "4.4.2",
    "tslint-loader": "3.4.2",
    "typedoc": "^0.5.7",
    "typescript": "2.0.10",
    "webpack": "2.2.1",
    "zone.js": "0.7.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
